<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 配置Sercive对象 -->
    <bean id="bookServiceImpl" class="cn.itcast.service.impl.BookServiceImpl">
        <!-- 注入bookDaoImpl-->
        <property name="bookDaoImpl" ref="now"></property>
    </bean>
    <!-- 配置bookDaoImpl对象-->
    <bean id="now" class="cn.itcast.dao.impl.BookDaoImpl">
        <!-- 注入QueryRunner-->
        <property name="runner" ref="Query"></property>
    </bean>
    <!-- 配置QueryRunner对象-->
    <bean id="Query" class="org.apache.commons.dbutils.QueryRunner" scope="prototype">
        <!-- 注入数据源-->
        <constructor-arg name="ds" ref="DataSourec"></constructor-arg>
    </bean>
    <!-- 配置数据源-->
    <bean id="DataSourec" class="com.mchange.v2.c3p0.ComboPooledDataSource">
        <!-- 数据库连接的必备信息 -->
        <property name="driverClass" value="com.mysql.jdbc.Driver"></property>
        <property name="jdbcUrl" value="jdbc:mysql://localhost:3306/mybatis2"></property>
        <property name="user" value="root"></property>
        <property name="password" value="root"></property>
    </bean>
</beans>